<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>名称</th>
      <th>数量</th>
      <th>サイズ</th>
      <th>片面</th>
      <th>製品種別</th>
      <th>注文種別</th>
      <th>再版</th>
      <th>担当者</th>
      <th>発注者</th>
      <th>印刷用紙</th>
      <th>印刷機</th>
      <th>備考</th>
      <th>校正日</th>
      <th>校了日</th>
      <th>印刷日</th>
      <th>製本日</th>
      <th>登録日</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.name %></td>
        <td><%= order.amount %></td>
        <td><%= order.size %></td>
        <td><%= order.is_oneside %></td>
        <td><%= order.product_type %></td>
        <td><%= order.order_type %></td>
        <td><%= order.is_reprint %></td>
        <td><%= order.assignee %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.paper %></td>
        <td><%= order.machine %></td>
        <td><%= order.note %></td>
        <td><%= order.proof_date %></td>
        <td><%= order.koryo_date %></td>
        <td><%= order.print_date %></td>
        <td><%= order.bookbind_date %></td>
        <td><%=l order.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_order_path(order), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      order_path(order),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_order_path,
            :class => 'btn btn-primary' %>
