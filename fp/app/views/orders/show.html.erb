<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @order.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @order.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:size) %>:</strong></dt>
  <dd><%= @order.size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_oneside) %>:</strong></dt>
  <dd><%= @order.is_oneside %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_type) %>:</strong></dt>
  <dd><%= @order.product_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_type) %>:</strong></dt>
  <dd><%= @order.order_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_reprint) %>:</strong></dt>
  <dd><%= @order.is_reprint %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assignee) %>:</strong></dt>
  <dd><%= @order.assignee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_name) %>:</strong></dt>
  <dd><%= @order.customer_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paper) %>:</strong></dt>
  <dd><%= @order.paper %></dd>
  <dt><strong><%= model_class.human_attribute_name(:machine) %>:</strong></dt>
  <dd><%= @order.machine %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @order.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:proof_date) %>:</strong></dt>
  <dd><%= @order.proof_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:koryo_date) %>:</strong></dt>
  <dd><%= @order.koryo_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:print_date) %>:</strong></dt>
  <dd><%= @order.print_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bookbind_date) %>:</strong></dt>
  <dd><%= @order.bookbind_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
