<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :名称, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :数量, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label :サイズ, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :size, :class => 'form-control' %>
    </div>
    <%=f.error_span(:size) %>
  </div>
  <div class="form-group">
    <%= f.label :片面, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :is_oneside, :class => 'form-control' %>
    </div>
    <%=f.error_span(:is_oneside) %>
  </div>
  <div class="form-group">
    <%= f.label :製品種別, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_type) %>
  </div>
  <div class="form-group">
    <%= f.label :注文種別, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:order_type) %>
  </div>
  <div class="form-group">
    <%= f.label :再版, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :is_reprint, :class => 'form-control' %>
    </div>
    <%=f.error_span(:is_reprint) %>
  </div>
  <div class="form-group">
    <%= f.label :担当者, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :assignee, :class => 'form-control' %>
    </div>
    <%=f.error_span(:assignee) %>
  </div>
  <div class="form-group">
    <%= f.label :発注者, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :customer_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:customer_name) %>
  </div>
  <div class="form-group">
    <%= f.label :印刷用紙, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :paper, :class => 'form-control' %>
    </div>
    <%=f.error_span(:paper) %>
  </div>
  <div class="form-group">
    <%= f.label :印刷機械, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :machine, :class => 'form-control' %>
    </div>
    <%=f.error_span(:machine) %>
  </div>
  <div class="form-group">
    <%= f.label :備考, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :note, :class => 'form-control' %>
    </div>
    <%=f.error_span(:note) %>
  </div>
  <div class="form-group">
    <%= f.label :校正日, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :proof_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:proof_date) %>
  </div>
  <div class="form-group">
    <%= f.label :校了日, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :koryo_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:koryo_date) %>
  </div>
  <div class="form-group">
    <%= f.label :印刷日, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :print_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:print_date) %>
  </div>
  <div class="form-group">
    <%= f.label :製本日, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :bookbind_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:bookbind_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
